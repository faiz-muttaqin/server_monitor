# ========================================
# Application Configuration
# ========================================
# Application display name
APP_NAME=MyServer

# Path to application logo (relative to assets folder)
# Windows: /assets/self/img/server_monitor.jpg
# Linux: /assets/self/img/server_monitor.jpg
APP_LOGO=/assets/self/img/server_monitor.jpg

# Application version information
APP_VERSION=1.0.0
APP_VERSION_NO=1
APP_VERSION_CODE=1.0.0
APP_VERSION_NAME=MyServer

# Local host and port for web interface
# Example: :28888 or 0.0.0.0:8080
APP_LOCAL_HOST=:28888

# Application directory (optional, auto-detected if empty)
# Windows: C:\Program Files\ServerMonitor
# Linux: /opt/server_monitor or /usr/local/bin/server_monitor
APP_DIR=

# ========================================
# Service Configuration
# ========================================
# Service name for OS service installation
# Windows: ServerMonitor
# Linux systemd: server-monitor.service
SERVICE_NAME=

# ========================================
# Authentication
# ========================================
# JSON array of username:password pairs for basic auth
# Example: ["admin:password123","user:userpass"]
AUTH=["admin:password123"]

# Secret key for JWT token generation (use a strong random string)
JWT_SECRET_KEY=your-secret-key-min-32-characters-long

# ========================================
# Master/Server Configuration
# ========================================
# Master server URL for slave nodes to connect
# Example: http://192.168.1.100:28888
MASTER_HOST=

# ========================================
# Database Configuration
# ========================================
# Database connection settings (all required or all empty)
DB_WEB_USER=dbuser
DB_WEB_PASSWORD=dbpassword
DB_WEB_HOST=localhost
DB_WEB_PORT=3306
DB_WEB_NAME=server_monitor

# ========================================
# Redis Configuration
# ========================================
# Redis server settings (all required or all empty)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Logging Configuration
# ========================================
# Log level: trace, debug, info, warn, error, fatal, panic
LOG_LEVEL=info

# Log format: json or csv
# Log file path and name
# Windows: .\log\app\ or C:\ProgramData\ServerMonitor\log\
# Linux: ./log/app/ or /var/log/server_monitor/
LOG_PATH=./log/app/
LOG_FILE=app.logand name
LOG_PATH=./log/app/
LOG_FILE=app.log

# Database log mode: silent or release
LOG_DB_MODE=silent

# Gin framework log mode: debug or release
LOG_GIN_MODE=release
GIN_MODE=release

# ========================================
# MikroTik Configuration
# ========================================
# Single MikroTik connection (legacy)
MIKROTIK_HOST=192.168.88.1:8728
MIKROTIK_USER=admin
MIKROTIK_PASS=password

# Multiple MikroTik routers (JSON array, recommended)
# Example: [{"host":"192.168.1.1:8728","user":"admin","pass":"password","name":"Router-1"}]
MIKROTIK=[{"host":"192.168.88.1:8728","user":"admin","pass":"password","name":"MikroTik-Main"}]

# Retry interval for MikroTik connection failures
MIKROTIK_RETRY_INTERVAL=30s

# Monitoring interval for MikroTik services
MONITOR_MIKROTIK_INTERVAL=60s

# ========================================
# ESXi Configuration
# ========================================
# Multiple ESXi servers (JSON array of URLs)
# Format: https://username:password@host/sdk
# Example: ["https://root:password@192.168.1.10/sdk","https://root:password@192.168.1.11/sdk"]
ESXI=["https://root:password@192.168.1.10/sdk"]

# Single ESXi connection (alternative to JSON array)
ESXI_URL=https://192.168.1.10/sdk
ESXI_HOST=192.168.1.10
ESXI_USER=root
ESXI_PASS=password

# Skip SSL certificate verification (1=true, 0=false)
ESXI_INSECURE=0

# Polling interval in seconds for ESXi monitoring
# Path to store ESXi data cache
# Windows: .\data\esxi_data.json or C:\ProgramData\ServerMonitor\data\esxi_data.json
# Linux: ./data/esxi_data.json or /var/lib/server_monitor/esxi_data.json
DATA_FILE_PATH=./data/esxi_data.json
# Path to store ESXi data cache
DATA_FILE_PATH=./data/esxi_data.json

# ========================================
# System Display (Linux Only)
# ========================================
# X11 display server
DISPLAY=:0

# Wayland display server
WAYLAND_DISPLAY=wayland-0

# Desktop environment name
XDG_CURRENT_DESKTOP=GNOME
DESKTOP_SESSION=gnome
